{
    "ocaml.sandbox": {
        "kind": "opam",
        "switch": "5.0.0"
    },
    "editor.fontSize": 13,
    "editor.fontLigatures": true,
    "editor.fontWeight": "900",
    "editor.fontFamily": "JetBrains Mono, Input Mono",
    "editor.lineHeight": 1.25,
    "workbench.colorCustomizations": {
        "[*Light*]": {
            "editor.foreground": "#333"
        },
        "[*Dark*]": {
            "editor.foreground": "#e6cd9c",
            "editorBracketHighlight.foreground1": "#9C5A3B",
            "editorBracketHighlight.foreground2": "#D2A25B",
            "editorBracketHighlight.foreground3": "#9C5A3B",
            "editorBracketHighlight.foreground4": "#D2A25B",
            "editorBracketHighlight.foreground5": "#9C5A3B",
        },
    },
    "editor.tokenColorCustomizations": {
        "[*Dark*]": {
            "textMateRules": [
                {
                    "name": "Keywords",
                    "scope": "keyword",
                    "settings": {
                        "foreground": "#bb523b"
                    }
                },
                {
                    "name": "Functions",
                    "scope": [
                        "entity.name.function"
                    ],
                    "settings": {
                        "foreground": "#d6ab6a"
                    }
                },
                {
                    "name": "Constants",
                    "scope": "constant",
                    "settings": {
                        "foreground": "#b5b51a"
                    }
                },
                {
                    "scope": [
                        "variable",
                        "entity.name.type"
                    ],
                    "settings": {
                        "foreground": "#e7a1a1",
                    }
                },
                {
                    "name": "Strings",
                    "scope": "string",
                    "settings": {
                        "foreground": "#919ba8"
                    }
                },
                {
                    "name": "Integers",
                    "scope": "constant.numeric",
                    "settings": {
                        "foreground": "#D2A25B"
                    }
                },
                {
                    "name": "Comments",
                    "scope": "comment, punctuation.definition.comment",
                    "settings": {
                        "foreground": "#7f848e"
                    }
                },
                {
                    "scope": [
                        "support"
                    ],
                    "settings": {
                        "foreground": "#D2A25B"
                    }
                },
                {
                    "scope": [
                        "punctuation"
                    ],
                    "settings": {
                        "foreground": "#d35628",
                        // "fontStyle": "bold"
                    }
                },
            ]
        }
    },
}