{
    "ocaml.sandbox": {
        "kind": "opam",
        "switch": "5.0.0"
    },
    "workbench.colorCustomizations": {
        "editor.background": "#212121" // Replace with your desired background color in HEX or RGB format
    },
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "name": "Keywords",
                "scope": "keyword",
                "settings": {
                    "foreground": "#bc4a22"
                }
            },
            {
                "name": "Functions",
                "scope": [
                    "entity.name.function",
                    "meta.require",
                    "support.function.any-method",
                    "variable.function"
                ],
                "settings": {
                    "foreground": "#cbb497"
                }
            },
            {
                "name": "Strings",
                "scope": "string",
                "settings": {
                    "foreground": "#919ba8"
                }
            },
            {
                "name": "Integers",
                "scope": "constant.numeric",
                "settings": {
                    "foreground": "#D2A25B"
                }
            },
            {
                "name": "Constants",
                "scope": "constant",
                "settings": {
                    "foreground": "#a6a638"
                }
            },
            {
                "name": "Comments",
                "scope": "comment, punctuation.definition.comment",
                "settings": {
                    "fontStyle": "italic",
                    "foreground": "#7f848e"
                }
            },
        ]
    }
}