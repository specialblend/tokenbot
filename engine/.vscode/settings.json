    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "name": "Keywords",
                "scope": "keyword",
                "settings": {
                    "fontStyle": "bold",
                    "foreground": "#d34728"
                }
            },
            {
                "name": "Functions",
                "scope": [
                    "entity.name.function"
                ],
                "settings": {
                    "foreground": "#eb7f7b"
                }
            },
            {
                "name": "Constants",
                "scope": "constant",
                "settings": {
                    // "foreground": "#a6a638"
                    "foreground": "#b5b51a"
                }
            },
            {
                "scope": [
                    "variable",
                    "entity.name.type"
                ],
                "settings": {
                    "foreground": "#e8a112",
                    "fontStyle": "bold"
                }
            },
            {
                "name": "Strings",
                "scope": "string",
                "settings": {
                    "foreground": "#919ba8"
                }
            },
            {
                "name": "Integers",
                "scope": "constant.numeric",
                "settings": {
                    "foreground": "#D2A25B"
                }
            },
            {
                "name": "Comments",
                "scope": "comment, punctuation.definition.comment",
                "settings": {
                    "foreground": "#7f848e"
                }
            },
            {
                "scope": [
                    "support"
                ],
                "settings": {
                    "foreground": "#D2A25B"
                }
            },
            {
                "scope": [
                    "punctuation"
                ],
                "settings": {
                    "foreground": "#a6a638",
                    "fontStyle": "bold"
                }
            },
        ]
    }
}